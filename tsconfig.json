{
  "compilerOptions": {
    "pretty": true,
    "target": "es2017",
    "outDir": "./dist",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"]
}
